<main class="container-fluid">
  <div class="bg-light p-3">
    <h4 class="container">Mi perfil</h4>

  </div>

  <div class="container">
    <div class="row">
      <div class="card m-3 shadow p-3 mb-3 bg-body rounded col-md-12">
        <h5 class="card-title mb-2 fw-bold">Información de tu cuenta</h5>

        <div class=" card-body p-4">

          <div class="row">

            <div class="col-md-8">
              {{#if user.is_artist}}
              <div class="row">
                <div class="col-md-6">
                  <form method="POST" action="/upload/{{user.id}}" enctype="multipart/form-data">
                    <label class="danger alert-info mb-1 p-1" for="video"> Sube una foto de perfil aquí

                    </label>
                    <input class="form-control" type="file" name="file">
                    <input class="form-control" type="submit" value="Subir foto ">
                  </form>
                </div>
              </div>



              {{/if}}
              <form action="/editUser/{{user.id}}" method="POST">
                <div class="d-flex justify-content-end">
                  <div class="btn-group" role="group" aria-label="Button group with nested dropdown">

                    <button type="button" class="btn btn-sm btn-secondary " onclick="activarInput()"><i
                        class="fas fa-user-edit"></i> Editar</button> &nbsp;
                    <button type="submit" class="btn btn-sm btn-secondary active"><i class="fas fa-save"></i>
                      Guardar</button>

                  </div>


                </div>


                {{#if user.is_artist}}



