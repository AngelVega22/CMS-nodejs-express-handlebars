                <input name="email" id="activate3" class="form-control w-100" type="text" value="{{user.email}} "
                  disabled>
                <h6 class="card-subtitle mb-2 text-muted mt-2">Username</h6>
                <input name="user_name" id="activate4" class="form-control w-100" type="text"
                  value="{{user.user_name}} " disabled>


