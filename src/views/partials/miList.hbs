{{#if user.is_artist}}

<div class="container">
    <div class="card m-3 shadow p-3 mt-5 mb-5 bg-body rounded">
        <div class="btn-group col-3">
            <a href="/" class="btn btn-light active " aria-current="page">Inicio </a>
            <a href="/dashboard" class="btn btn-secondary ">Perfil <i class="fas fa-sign-out-alt"></i></a>
        </div>
        <div class="d-flex justify-content-center"> <a class="text-decoration-none btn btn-secondary active"
                href="/addProduct">Agregar nueva publicación</a> </div>
        <div class=" card-body p-4">

            <h5 class="card-title mb-5">Mis publicaciones</h5>

            <div class="row">


                <table class="table table-light shadow-sm p-3  bg-body rounded">
                    <thead>
                        <tr>

                            <th scope="col">Foto</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Genero</th>
                            <th scope="col">Descripcion</th>
                            <th scope="col">Precio</th>
                            <th scope="col">Mantenimiento</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            {{#each data}}
                            <td><img width="50" class="rounded-pill img-fluid" src="{{url_img}}" alt=""></td>
                            <td>{{nombre_artista}}</td>
                            <td>{{genero}}</td>
                            <td>{{descripcion}}</td>
                            <td>S/.{{precio}} PEN</td>
                            <td>
                                <a class="btn btn-secondary" href="/editProduct/{{id}}">
                                    Editar
                                </a>
                                <a class="btn btn-danger" href="/deleteProducto/{{id}}">
                                    Eliminar
                                </a>
                            </td>
                        </tr> {{else}}
                        <div class="col-md-4 mb-5 mx-auto">
                            <div class="card card-body text-center">
                                <p>No tienes publicaciones todavia.</p>
                                <a class="text-dark text-decoration-none" href="/addProduct">¡Crea una!</a>
                            </div>
                        </div>
                        {{/each}}

                    </tbody>
                </table>


            </div>

        </div>
    </div>
</div>
{{else}}
<div style="height: 60vh;" class="page-wrap d-flex flex-row align-items-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12 text-center">
                <span class="display-1 d-block">4<i class="far fa-question-circle fa-spin"></i>4</span>
                <div class="mb-4 lead">La página que buscas no existe</div>
                <a href="/" class="btn btn-link text-dark text-decoration-none">Regresa a
                    inicio</a>
            </div>
        </div>
    </div>
</div>

{{/if}}