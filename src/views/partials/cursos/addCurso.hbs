{{#if user.is_artist}}
<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card shadow p-3 mb-5 bg-body rounded">
                <div class="card-body  ">
                    <h5 class="text-center mb-4 alert alert-secondary">Ingresa el nuevo curso</h5>


                    <form action=" /addCurso/{{id}}" method="POST">
                        <div class="form-outline mb-4">
                            <input type="text" name="nombre_c" class="form-control" placeholder="Nombre de curso"
                                autofocus required>

                        </div>
                        <div class="form-outline mb-4">
                            <textarea style="resize: none;" name="descripcion_c" rows="2" class="form-control"
                                placeholder="Descripcion" required></textarea>
                        </div>


                        <div class="form-outline mb-4">
                            <input type="text" name="duracion" class="form-control" placeholder="Duracion del curso"
                                required>

                        </div>
                        <div class="form-outline mb-4">
                            <input type="text" name="horario" class="form-control" placeholder="Horario del curso"
                                required>

                        </div>
                        <div class="form-outline mb-4">
                            <input type="text" name="inicio" class="form-control" placeholder="Inicio del curso"
                                required>

                        </div>

                        <div class="form-outline mb-4">
                            <input type="number" name="precio" class="form-control" placeholder="Precio" required>

                        </div>
                        <div class="d-flex justify-content-start mb-2 p-1">
                            <h6> ¿Está activo?</h6>
                        </div>
                        <div class="form-check col-1">

                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="estado_curso" id="estado_curso"
                                    value="1" required>
                                <label class="form-check-label" for="estado_curso">
                                    Si
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="estado_curso" id="estado_curso"
                                    value="0" required>
                                <label class="form-check-label" for="estado_curso">
                                    No
                                </label>
                            </div>
                        </div>

                        <div class="form-outline mb-4 d-flex justify-content-center">
                            <br>
                            <button class="btn btn-primary btn-block ">
                                Agregar
                            </button>
                        </div>
                    </form>


                </div>
            </div>
        </div>
        <div class="d-flex justify-content-center"> <a class="text-dark text-decoration-none mb-3"
                href="/cursos/{{id}}">
                <i class="fas fa-undo-alt "></i> Regresar </a>
        </div>

    </div>
</div>
{{else}}
{{>404}}
{{/if}}