<div class="container p-4">

  <div class="row">

    <div class="col-md-4 mx-auto signup-container">
      <div class="card text-center">
        <div class="card-header">
          <h6>Ingresa tus datos <br> para poder registrarte</h6>
          <br>
          <h3>Registro</h3>

        </div>
        <div class="card-body">
          {{#if errors}}
          {{#each errors}}
          <p class="alert alert-danger"> {{this.msg}}</p>
          {{/each}}
          {{/if}}
          <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="form-group">
              <input type="text" name="first_name" value="{{data.first_name}}" placeholder="Nombre completo"
                class="form-control" autofocus required />
            </div>
            <div class="form-group">
              <input type="text" name="last_name" value="{{data.last_name}}" placeholder="Apellido completo"
                class="form-control" required />
            </div>
            <div class="form-group">
              <input type="text" name="user_name" value="{{data.user_name}}" placeholder="Username" class="form-control"
                required />
            </div>
            <div class="form-group">
              <input type="email" name="email" value="{{data.email}}" placeholder="Email" class="form-control"
                required />
            </div>
            <div class="form-group">
              <input type="password" name="password" value="{{data.password}}" placeholder="ContraseÃ±a"
                class="form-control" required />
            </div>
            <div class="form-group">
              <br />
              <button class="btn btn-success btn block">
                Registrarte
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>